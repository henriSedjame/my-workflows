{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "my-workflow-app",
  "version": "0.1.0",
  "identifier": "com.my-workflow-app.app",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/my-workflows/browser"
  },
  "app": {
    "windows": [
      {
        "backgroundColor" : "#1f2023",
        "title": "",
        "titleBarStyle": "Overlay",
        "width": 0,
        "height": 0
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
