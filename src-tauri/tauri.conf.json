{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "my-workflow-app",
  "version": "0.1.0",
  "identifier": "com.my-workflow-app.app",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/my-workflows/browser"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "decorations": false,
        "title": "MyWorkflowApp",
        "width": 800,
        "height": 800,
        "resizable": true,
        "backgroundColor": "#00000000",
        "hiddenTitle": true,
        "transparent": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
